<h1 align="center">All your listings</h1>

  <% @listings.each do |listing| %>
  <div classw="row">
    <div class="well col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="listing-mlscode">
          <%= link_to listing.mlscode, listing_path(listing) %>
        </div>
        <div class="listing-address">
          <%= truncate(listing.address, length: 200) %>
        </div>
        <div class="listing-actions">
          <%= link_to "Edit this listing", edit_listing_path(listing), class: "btn btn-xs btn-primary" %> 
          <%= link_to "Delete this listing", listing_path(listing), method: :delete, data: { confirm: 
                      "Are you sure you want to delete this listing?"},class: "btn btn-xs btn-danger" %>
        </div>
      </div>  
    </div>
  </div>
  <% end %>

<div align="center">
  <div class="well col-xs-2 col-xs-offset-2">
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>
